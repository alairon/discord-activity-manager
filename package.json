{
  "name": "project-turf",
  "version": "1.0.0",
  "description": "An easy-to-use Discord activity manager",
  "scripts": {
    "build-react": "tsc && react-scripts build",
    "build-electron": "tsc --project ./src/electron/tsconfig.json",
    "build": "npm run lint && concurrently \"npm:build-react\" \"npm:build-electron\"",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "react": "tsc && react-scripts start",
    "next": "next dev",
    "electron": "concurrently -k \"next dev\" \"wait-on tcp:3000 && electron ./dist/main.js\"",
    "electron2": "concurrently -k \"npm:react\" \"wait-on tcp:3000 && electron ./dist/main.js\"",
    "start": "npm run build && electron ./dist/main.js",
    "dev": "npm run build-electron && npm run electron"
  },
  "repository": "https://github.com/alairon/project-turf",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "alairon",
  "license": "MIT",
  "homepage": ".",
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.8",
    "discord-rpc": "^4.0.1",
    "luxon": "^3.0.2",
    "next": "^12.2.5",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.3",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.3.0",
    "electron": "^20.0.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.22.0",
    "typescript": "^4.7.2",
    "wait-on": "^6.0.1"
  }
}
