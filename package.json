{
  "name": "project-turf",
  "version": "1.0.0",
  "description": "An easy-to-use Discord activity manager",
  "scripts": {
    "build": "npm run lint && concurrently \"npm:build-next\" \"npm:build-electron\"",
    "build-next": "next build && next export",
    "build-electron": "tsc --project ./src/electron/tsconfig.json",
    "package": "electron-builder build",
    "electron": "concurrently -n next,electron -k \"next dev\" \"wait-on tcp:3000 && electron ./dist/main.js\"",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "next": "next dev",
    "dev": "npm run build-electron && npm run electron",
    "start": "npm run build && electron ./dist/main.js"
  },
  "repository": "https://github.com/alairon/project-turf",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "alairon",
  "license": "MIT",
  "homepage": ".",
  "build": {
    "productName": "Project Turf",
    "appId": "pt-statusModifier",
    "win": {
      "target": "portable"
    },
    "portable": {
      "artifactName": "project_turf.exe"
    },
    "directories": {
      "output": "electron/out"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:tailwindcss/recommended"
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.8",
    "discord-rpc": "^4.0.1",
    "luxon": "^3.0.2",
    "next": "^12.2.5",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.3",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.3.0",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.22.0",
    "eslint-plugin-tailwindcss": "^3.6.1",
    "typescript": "^4.7.2",
    "wait-on": "^6.0.1"
  }
}
