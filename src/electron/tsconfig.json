{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "../../dist",
    "typeRoots": ["../../types", "../../node_modules/@types"],
    "removeComments": true,
    "paths": {
      "*": ["../../node_modules/*"]
    }
  },
  "include": [
    "./**/*"
  ]
}
